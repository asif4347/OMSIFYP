@model IEnumerable<OMSIFYP.Models.Enrollment>

@{
    ViewBag.Title = "uploadMarks";
    Layout = "~/Views/Shared/_LayoutInstructor.cshtml";
}

<h2>uploadMarks</h2>
@using (Html.BeginForm())
{
    @Html.DropDownList("course","--Select your Course--")
    <input type="submit" value="search"/>
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Course.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.userId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.test1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.test2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.final)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Course.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Student.userId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Grade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.test1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.test2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.final)
        </td>
        <td>
            @Html.ActionLink("Update Marks", "updateMarks", new { id=item.EnrollmentID }) |
           
        </td>
    </tr>
}

</table>
